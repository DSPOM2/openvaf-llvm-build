FROM ubuntu:22.04

ENV RUSTUP_HOME=/usr/local/rustup \
    CARGO_HOME=/usr/local/cargo \
    PATH=/usr/local/cargo/bin:$PATH \
    RUST_VERSION=1.63.0

COPY ferris-ci /usr/bin/ferris-ci
COPY containers/scripts/setup_clippy.sh /scripts/
RUN set -e ; \
    /scripts/setup_clippy.sh; \
    rm -rf /scripts; 
